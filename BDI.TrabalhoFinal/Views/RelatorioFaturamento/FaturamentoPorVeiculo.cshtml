@{
    ViewData["Title"] = "Relatório de Faturamento por Veículo";
}

<h2>Relatório de Faturamento por Veículo</h2>

<form method="post" asp-controller="Relatorio" asp-action="FaturamentoPorVeiculo">
    <div>
        <label for="ano">Ano:</label>
        <input type="number" id="ano" name="ano" required />
    </div>
    <div>
        <label for="mes">Mês:</label>
        <input type="number" id="mes" name="mes" required min="1" max="12" />
    </div>
    <button type="submit">Buscar</button>
</form>

